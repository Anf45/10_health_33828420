<!doctype html>
<html>
  <head>
    <title><%= appName %> - My Workouts</title>
  </head>
  <body>
    <h1>My Workouts</h1>

    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/about">About</a></li>
        <li><a href="/workouts/add">Add Workout</a></li>
        <li><a href="/users/logout">Logout</a></li>
      </ul>
    </nav>

    <% if (!workouts || workouts.length === 0) { %>
      <p>You have no workouts logged yet.</p>
      <p><a href="/workouts/add">Add your first workout</a></p>
    <% } else { %>
      <table border="1" cellpadding="5" cellspacing="0">
        <thead>
          <tr>
            <th>Date</th>
            <th>Category</th>
            <th>Duration (min)</th>
            <th>Intensity</th>
            <th>Notes</th>
          </tr>
        </thead>
        <tbody>
          <% workouts.forEach(function(w) { %>
            <tr>
              <td><%= w.workout_date.toISOString().slice(0, 10) %></td>
              <td><%= w.category %></td>
              <td><%= w.duration_minutes %></td>
              <td><%= w.intensity || '' %></td>
              <td><%= w.notes || '' %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } %>
  </body>
</html>
